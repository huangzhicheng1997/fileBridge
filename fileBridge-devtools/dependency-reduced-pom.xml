<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>fileBridge-parent</artifactId>
    <groupId>com.github.fileBridge</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>fileBridge-devtools</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <skip>${native.image.switch}</skip>
              <transformers>
                <transformer>
                  <mainClass>com.github.fileBridge.devtools.Main</mainClass>
                </transformer>
              </transformers>
              <outputFile>../bin/dev/devtool.jar</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>jar</id>
      <properties>
        <image.name>devtool</image.name>
        <native.image.switch>true</native.image.switch>
      </properties>
    </profile>
    <profile>
      <id>native</id>
      <properties>
        <os.detected.arch>x86_64</os.detected.arch>
        <os.detected.release.like.centos>true</os.detected.release.like.centos>
        <os.detected.classifier>linux-x86_64</os.detected.classifier>
        <os.detected.release.like.fedora>true</os.detected.release.like.fedora>
        <os.detected.release.like.rhel>true</os.detected.release.like.rhel>
        <os.detected.release>centos</os.detected.release>
        <os.detected.release.version>7</os.detected.release.version>
        <os.detected.name>linux</os.detected.name>
        <image.name>devtool</image.name>
        <native.image.switch>false</native.image.switch>
      </properties>
    </profile>
  </profiles>
</project>
